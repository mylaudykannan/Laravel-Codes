    @extends('layouts.app')

    @section('content')
    @if (config('page.section.' . $slug))
    @foreach (config('page.section.' . $slug) as $k => $v)
    @if (isset($v['template']) && isset($pagesections[$k]))
    @include('templates.' . $v['template'], [
    'pagesectionVal' => $pagesections[$k],
    ])
    @else
    @if (isset($pagesections[$k]))
    @foreach ($pagesections[$k] as $kin => $ps)
    <?php
                            $content = json_decode($ps['content'], true);
                            ?>
    {{-- @if (isset($content['title']))
                                    <h2>{{ $content['title'] }}</h2>
    @endif --}}
    @if (isset($content['content']))
    {!! $content['content'] !!}
    @endif
    @endforeach
    @endif
    @endif
    @endforeach
    @else
    @foreach ($page['sections'] as $k => $ps)
    <?php
                $content = json_decode($ps['content'], true);
                ?>
    @if (isset($content['content']))
    <div class="container py-5">
        {!! $content['content'] !!}
    </div>
    @endif
    @endforeach
    @endif
    @endsection
    @section('scripts')

    {{-- for page custom libraries --}}
    @if (config('page.custom-library.' . $slug. '.css'))
    @foreach (config('page.custom-library.' . $slug. '.css') as $k => $v)
    @if (str_starts_with($v, 'http'))
    <link rel="stylesheet" href="{{ $v }}">
    @else
    <link rel="stylesheet" href="{{ asset($v) }}">
    @endif
    @endforeach
    @endif
    @if (config('page.custom-library.' . $slug. '.js'))
    @foreach (config('page.custom-library.' . $slug. '.js') as $k => $v)
    @if (str_starts_with($v, 'http'))
    <script src="{{$v}}"></script>
    @else
    <script src="{{ asset($v) }}"></script>
    @endif
    @endforeach
    @endif
    {{-- for page custom libraries --}}

    @endsection
